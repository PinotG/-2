<h1>Books</h1>


<% @books.each do |book| %>

<table>
  <thread>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
  </thread>
  <tbody>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id)%></td>
          <td><%= link_to "Edit", "/books/#{book.id}/edit"%></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
      </tr>
  </tbody>
</table>

    
<% end %>

    <h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error(s)
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: Book.new do |f| %> 

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
  
    <%= f.submit 'Create Book' %>
<% end %>
